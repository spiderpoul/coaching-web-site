{
  "compilerOptions": {
    "jsx": "react",
    "noEmitOnError": true,
    "inlineSources": true,
    "sourceMap": true,
    "lib": ["es6", "dom", "esnext.asynciterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "build",
    "target": "es5",
    "typeRoots": ["./node_modules/@types/"]
  },
  "include": ["./"]
}
